# =============================================================================
# KEEP IN TOUCH BACKEND - ENVIRONMENT CONFIGURATION
# =============================================================================
APP_NAME=Keep in Touch

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/keep-in-touch-dev

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-complex
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-here-make-it-long-and-complex
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:3000

# Only add when you have web-based clients
ALLOWED_ORIGINS=https://admin.yourmessenger.com,https://web.yourmessenger.com

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:3001

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email service configuration
EMAIL_FROM=noreply@keepintouch.com
SUPPORT_EMAIL=support@keepintouch.com

# For development (using services like Mailtrap, MailHog, etc.)
EMAIL_SERVICE=
EMAIL_USER=
EMAIL_PASSWORD=
