# =============================================================================
# KEEP IN TOUCH BACKEND - TEST ENVIRONMENT CONFIGURATION
# =============================================================================
# This file provides all necessary environment variables for testing
# It should be loaded automatically during test execution

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=test
PORT=3001

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/keep-in-touch-test

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
ACCESS_TOKEN_SECRET=test-jwt-secret-key-for-testing-only-with-sufficient-length-to-meet-requirements
REFRESH_TOKEN_SECRET=test-jwt-refresh-secret-key-for-testing-only-with-sufficient-length-to-meet-requirements
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# =============================================================================
# EMAIL CONFIGURATION (Test Defaults)
# =============================================================================
EMAIL_SERVICE=gmail
EMAIL_USER=test@example.com
EMAIL_PASS=test-email-password
EMAIL_FROM=test@keepintouch.test
SUPPORT_EMAIL=support@keepintouch.test

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=Keep in Touch (Test)
FRONTEND_URL=http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=silent
